<h1>Новый вагон</h1>

<%= form_for [:admin, @train, @carriage] do |f| %>
    <div class="field">
      <%= f.label :number %><br>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :top_seats %><br>
      <%= f.number_field :top_seats %>
    </div>

    <div class="field">
      <%= f.label :bottom_seats %><br>
      <%= f.number_field :bottom_seats %>
    </div>

    <div class="field">
      <%= f.label :side_top_seats %><br>
      <%= f.number_field :side_top_seats %>
    </div>

    <div class="field">
      <%= f.label :side_bottom_seats %><br>
      <%= f.number_field :side_bottom_seats %>
    </div>

    <div class="actions">
      <%= f.submit "Создать" %>
    </div>
<% end %>